<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.2//EN"
        "http://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>
    <suppress checks="AvoidStaticImport" files=".*Test.java" />
    <suppress checks="FileLength" files=".*Test.java" />
    <suppress checks="FinalLocalVariable" files=".*.java" />
    <suppress checks="JavadocType" files="." />
    <suppress checks="JavadocMethod" files=".*Test.java" />
    <suppress checks="MagicNumber" files=".*.java" />
    <suppress checks="MethodName" files=".*Test.java" />
    <suppress checks="PackageDeclaration" files=".*.java" />
    <suppress checks="." files="src/resources/.*\.[PpJj][NnPp][Gg]" />
    <suppress checks="(Javadoc|MethodName)" files="src/test/java" />             <!-- gradle tests -->
    <suppress checks="(Javadoc|MethodName)" files="tst/com/amazon" />            <!-- HappyTrails tests -->
</suppressions>
